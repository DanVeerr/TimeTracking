@model TimeTracking.Models.Report
@{
    ViewBag.Title = "Добавление отчета";
}
<form asp-action="Create" asp-controller="Tracking">

    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Notes" class="control-label">Примечание</label>
        <input type="text" asp-for="Notes" class="form-control" /><br />
        <span asp-validation-for="Notes"></span>
    </div>
    <div class="form-group">
        <label asp-for="Hours" class="control-label">Количество часов</label>
        <input type="number" asp-for="Hours" class="form-control" /><br />
        <span asp-validation-for="Hours"></span>
    </div>
    <div class="form-group">
        <label asp-for="Date" class="control-label">Дата</label><br />
        <input type="date" asp-for="Date" class="form-control" />
        <span asp-validation-for="Date"></span>
    </div>
    <div class="form-group">
        <label asp-for="OwnerId" class="control-label">Пользователь</label><br />
        <select name="Ownerid" asp-items="ViewBag.Users" class="form-control"></select>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Добавить" />
    </div>
</form>

@section scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}