@model TimeTracking.Models.Report
@{
    ViewBag.Title = "Редактирование отчета";
}
<form asp-action="edit" asp-controller="Tracking" asp-route-id="@Model.Id">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Notes" class="control-label">Примечание</label>
        <input type="text" asp-for="Notes" class="form-control" /><br />
        <span asp-validation-for="Notes"></span>
    </div>
    <div class="form-group">
        <label asp-for="Hours" class="control-label">Количество</label>
        <input type="number" asp-for="Hours" class="form-control" /><br />
        <span asp-validation-for="Hours"></span>
    </div>
    <div class="form-group">
        <label asp-for="Date" class="control-label">Дата</label><br />
        <input type="date" asp-for="Date" class="form-control" />
        <span asp-validation-for="Date"></span>
    </div>
    <div class="form-group">
        <label>Выберите пользователся:   </label>
        <select name="ownerId" class="form-select">
            @foreach (TimeTracking.ViewModels.UserModel user in ViewBag.Users)
            {
                if (Model.OwnerId == user.Id)
                {
                    <option selected="selected" value="@user.Id">@user.Surname</option>
                }
                else
                {
                    <option value="@user.Id">@user.Surname</option>
                }
            }
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-primary" />
    </div>
</form>
@section scripts
{
    <script src="~/lib/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}