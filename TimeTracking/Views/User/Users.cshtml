@model IEnumerable<TimeTracking.Models.User>
@{
    ViewBag.Title = "Все пользователи";
}

<table class="table ">
    <thead class="thead-dark">
        <tr>
            <td scope="col" align="center">Имя пользователя:</td>
            <td scope="col" align="center">Фамилия пользователь:</td>
            <td scope="col" align="center">Email:</td>
            <td scope="col" align="center">Действия:</td>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td align="center">@item.Firstname</td>
            <td align="center">@item.Surname</td>
            <td align="center">@item.Email</td>
            <td align="center">
                <a asp-action="Reports" asp-controller="Tracking" asp-route-userid="@item.Id">Отчеты</a> |
                <a asp-action="Edit" asp-controller="User" asp-route-id="@item.Id">Изменить</a> |
                <a asp-action="Delete" asp-controller="User" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
    }
</table>
<a asp-action="Create">Добавить пользователя</a>