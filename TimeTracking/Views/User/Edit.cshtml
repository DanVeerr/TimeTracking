@model TimeTracking.Models.User
@{
    ViewBag.Title = "Редактирование пользователя";
}
<form asp-action="Edit" asp-controller="User" asp-route-id="@Model.Id" method="post">
    <div class="form-group">
        <label asp-for="Surname" class="control-label">Фамилия</label>
        <input type="text" asp-for="Surname" class="form-control" /><br />
        <span asp-validation-for="Surname"></span>
    </div>
    <div class="form-group">
        <label asp-for="Firstname" class="control-label">Имя</label>
        <input type="text" asp-for="Firstname" class="form-control" /><br />
        <span asp-validation-for="Firstname"></span>
    </div>
    <div class="form-group">
        <label asp-for="Patronymic" class="control-label">Отчество</label><br />
        <input type="text" asp-for="Patronymic" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label">Email</label>
        <input type="text" value="@ViewBag.Email" asp-for="Email" class="form-control" /><br />
    </div>
    <div class="form-group">
        <input  type="submit" value="Сохранить" class="btn btn-primary" />
    </div>
</form>
@section scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}